modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Launcher"

[[workflows.workflow]]
name = "Launcher"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:launcher"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42411
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "5000", "--dist", "apps/Launcher/dist"]
build = ["npm", "run", "build:launcher"]
